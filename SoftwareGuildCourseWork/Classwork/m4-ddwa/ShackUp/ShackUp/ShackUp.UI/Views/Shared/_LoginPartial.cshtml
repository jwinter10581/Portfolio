@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <li class="nav-item p-2">@Html.ActionLink("My Account", "Index", "MyAccount", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
}
else
{
    <li class="nav-item p-2">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    <li class="nav-item p-2">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
}
