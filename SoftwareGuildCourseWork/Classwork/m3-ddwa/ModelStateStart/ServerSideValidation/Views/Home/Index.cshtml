
@model ServerSideValidation.Models.AppointmentRequest

@{
    ViewBag.Title = "Index";
}

<h2>Book an Appointment</h2>

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <div class="form-group">
        <label>Name: </label>
        @Html.TextBoxFor(m => m.ClientName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Date: </label>
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control", type="Date" })
    </div>
    <div class="checkbox">
        <label>@Html.CheckBoxFor(m=>m.TermsAccepted) I accept the terms and conditions</label>
    </div>
    <button type="submit" class="btn btn-primary">Make Appointment</button>
}

